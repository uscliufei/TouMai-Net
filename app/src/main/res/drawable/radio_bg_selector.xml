<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape >
            <solid android:color="@color/white"></solid>

            <corners android:radius="@dimen/common4dp" ></corners>

            <stroke android:color="@color/text_color_orange" android:width="1px"></stroke>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape >
            <solid android:color="@color/white"></solid>
            <corners android:radius="@dimen/common4dp" ></corners>
            <stroke android:color="@color/divider_1dp" android:width="1px"></stroke>
        </shape>
    </item>
</selector>