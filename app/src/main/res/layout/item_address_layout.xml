<?xml version="1.0" encoding="utf-8"?>
<com.runer.liabary.swipelayout.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/white_press_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_press_bg"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/common_top_bottom_margin"
            android:layout_marginLeft="@dimen/common_left_right_margin"
            android:layout_marginRight="@dimen/common_left_right_margin"
            android:layout_marginTop="@dimen/common_left_right_margin">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_14sp" />

            <TextView
                android:id="@+id/tel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_size_12sp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/moren_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_left_right_margin"
                android:text="[默认]"
                android:visibility="gone"
                android:textColor="@color/text_color_red"
                android:textSize="@dimen/text_size_12sp" />

            <TextView
                android:layout_marginLeft="@dimen/common_left_right_margin"
                android:id="@+id/address_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_left_right_margin"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_12sp" />
        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/delete_bt"
        android:background="@color/text_color_orange"
        android:layout_width="80dp"
        android:text="删除"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18sp"
        android:layout_height="match_parent" />
</com.runer.liabary.swipelayout.SwipeMenuLayout>