<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/translucent"
    android:id="@+id/container"
    android:layout_height="match_parent">


<LinearLayout
    android:clickable="true"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingLeft="@dimen/common_left_right_margin"
        android:layout_marginRight="@dimen/common_left_right_margin"
        android:paddingTop="@dimen/common_top_bottom_margin"
        android:paddingBottom="@dimen/common_top_bottom_margin"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/dark_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/common2dp"
            android:layout_marginLeft="@dimen/common2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_bg_selector"
            android:button="@null"
            android:checked="false"
            android:paddingBottom="@dimen/common_left_right_margin"
            android:paddingTop="@dimen/common_left_right_margin"
            android:text="暗价"
            android:textColor="@drawable/radio_text_color_selector"
            android:textSize="@dimen/text_size_16sp" />
        <CheckBox
            android:id="@+id/briht_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_bg_selector"
            android:button="@null"
            android:layout_marginRight="@dimen/common2dp"
            android:layout_marginLeft="@dimen/common2dp"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="@dimen/common_left_right_margin"
            android:paddingTop="@dimen/common_left_right_margin"
            android:text="明价"
            android:textColor="@drawable/radio_text_color_selector"
            android:textSize="@dimen/text_size_16sp" />

        <CheckBox
            android:id="@+id/down_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/common2dp"
            android:layout_marginLeft="@dimen/common2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_bg_selector"
            android:button="@null"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="@dimen/common_left_right_margin"
            android:paddingTop="@dimen/common_left_right_margin"
            android:text="降价"
            android:textColor="@drawable/radio_text_color_selector"
            android:textSize="@dimen/text_size_16sp" />
        <CheckBox
            android:id="@+id/heart_type"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_bg_selector"
            android:button="@null"
            android:layout_marginRight="@dimen/common2dp"
            android:layout_marginLeft="@dimen/common2dp"
            android:checked="false"
            android:gravity="center"
            android:paddingBottom="@dimen/common_left_right_margin"
            android:paddingTop="@dimen/common_left_right_margin"
            android:text="心跳时间"
            android:textColor="@drawable/radio_text_color_selector"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>


    <LinearLayout
        android:paddingLeft="@dimen/common_left_right_margin"
        android:layout_marginRight="@dimen/common_left_right_margin"
        android:paddingTop="@dimen/common_top_bottom_margin"
        android:paddingBottom="@dimen/common_top_bottom_margin"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/finished_over"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/common2dp"
            android:layout_marginLeft="@dimen/common2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_bg_selector"
            android:button="@null"
            android:checked="false"
            android:paddingBottom="@dimen/common_left_right_margin"
            android:paddingTop="@dimen/common_left_right_margin"
            android:text="已结束-已成交"
            android:textColor="@drawable/radio_text_color_selector"
            android:textSize="@dimen/text_size_16sp" />
        <CheckBox
            android:id="@+id/finished_un_over"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="@dimen/common2dp"
            android:layout_marginLeft="@dimen/common2dp"
            android:layout_height="wrap_content"
            android:background="@drawable/radio_bg_selector"
            android:button="@null"
            android:checked="false"
            android:paddingBottom="@dimen/common_left_right_margin"
            android:paddingTop="@dimen/common_left_right_margin"
            android:text="已结束-未成交"
            android:textColor="@drawable/radio_text_color_selector"
            android:textSize="@dimen/text_size_16sp" />
    </LinearLayout>


    <View style="@style/Divider" android:layout_marginTop="@dimen/common6dp"></View>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/commit_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common46dp"
            android:text="确定"
            android:textColor="@color/text_color_orange"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/faq_bt"
            android:src="@drawable/faq"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/common30dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />

    </FrameLayout>

    <View style="@style/Divider"></View>
</LinearLayout>

</LinearLayout>