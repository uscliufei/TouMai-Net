<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/white_press_bg"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <TextView
           android:id="@+id/name"
           android:layout_marginTop="@dimen/common_top_bottom_margin"
           android:layout_marginBottom="@dimen/common_top_bottom_margin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_size_14sp"
           android:textColor="@color/text_color_orange"
           android:layout_marginLeft="@dimen/common_left_right_margin"
           />

       <TextView
           android:id="@+id/time"
           android:layout_marginTop="@dimen/common_top_bottom_margin"
           android:layout_marginBottom="@dimen/common_top_bottom_margin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_size_12sp"
           android:layout_marginRight="@dimen/common_left_right_margin"
           android:textColor="@color/text_color_light"
           android:layout_alignParentRight="true"
           />

   </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/common2dp"
            android:layout_marginLeft="@dimen/common_left_right_margin"
            android:src="@drawable/qustion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="top"
            android:id="@+id/question"
            android:layout_marginLeft="@dimen/common4dp"
            android:paddingRight="@dimen/common_left_right_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12sp"
            android:layout_marginBottom="@dimen/common4dp"
            />
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/common4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="2dp"
            android:layout_marginLeft="@dimen/common_left_right_margin"
            android:src="@drawable/answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="top"
            android:id="@+id/answer"
            android:layout_marginLeft="@dimen/common4dp"
            android:paddingRight="@dimen/common_left_right_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color_gray"
            android:textSize="@dimen/text_size_12sp"
            android:text="暂无回答"
            android:layout_marginBottom="@dimen/common4dp"
            />

        <TextView
            android:id="@+id/answer_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/green_state"
            android:text="回答"
            android:layout_marginBottom="@dimen/common_top_bottom_margin"
            android:layout_marginLeft="@dimen/common60dp"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/common_left_right_margin"
            android:paddingRight="@dimen/common_left_right_margin"
            android:paddingTop="@dimen/common2dp"
            android:visibility="gone"
            android:paddingBottom="@dimen/common2dp"
            />

    </LinearLayout>


</LinearLayout>