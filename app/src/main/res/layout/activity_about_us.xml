<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.runer.toumai.ui.activity.AboutUs">
    <include
        layout="@layout/header_layout"
        ></include>

<ScrollView
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/common_top_bottom_margin"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/kefu_phone"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_16sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_left_right_margin"
                android:paddingRight="@dimen/common_left_right_margin"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/qiye_email"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_16sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_left_right_margin"
                android:paddingRight="@dimen/common_left_right_margin"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/weobo"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_16sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_left_right_margin"
                android:paddingRight="@dimen/common_left_right_margin"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/weixin"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_16sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common40dp"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/common_left_right_margin"
                android:paddingRight="@dimen/common_left_right_margin"
                android:layout_marginBottom="@dimen/common_top_bottom_margin"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/connect_kefu_tips"
                android:paddingLeft="@dimen/common_left_right_margin"
                android:paddingRight="@dimen/common_left_right_margin"
                android:layout_marginBottom="@dimen/common_top_bottom_margin"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/common_top_bottom_margin"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/code_img"
                android:layout_width="@dimen/common120dp"
                android:layout_height="@dimen/common120dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫二维码立即关注"
                android:layout_marginTop="@dimen/common4dp"
                android:textSize="@dimen/text_size_14sp"
                android:layout_marginBottom="@dimen/common4dp"
                android:textColor="@color/text_color_normal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_size_12sp"
                android:text="Copyright2017山东五蕴网络科技有限公司"
                android:layout_marginBottom="@dimen/common_left_right_margin"
                />
        </LinearLayout>


        <LinearLayout
            android:background="@color/white"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

           <LinearLayout
               android:background="@color/background"
               android:layout_width="match_parent"
               android:layout_height="46dp">
               <View android:layout_width="@dimen/common2dp"
                   android:layout_marginTop="@dimen/common10dp"
                   android:layout_marginBottom="@dimen/common10dp"
                   android:layout_height="match_parent"
                   android:background="@color/text_color_orange"
                   android:layout_marginLeft="@dimen/common_left_right_margin"
                   ></View>

               <TextView
                   android:gravity="center_vertical"
                   android:text="意见反馈"
                   android:layout_marginLeft="@dimen/common_left_right_margin"
                   android:textColor="@color/text_color_normal"
                   android:textSize="@dimen/text_size_16sp"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent" />
           </LinearLayout>

            <com.runer.toumai.widget.NormalInputEditText
                android:id="@+id/feed_user_name"
                app:input_type="text"
                app:left_text_color="@color/text_color_normal"
                app:left_text="姓名"
                app:right_hint="请填写"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.runer.toumai.widget.NormalInputEditText>

            <com.runer.toumai.widget.NormalInputEditText
                android:id="@+id/feed_user_phone"
                app:input_type="num"
                app:left_text_color="@color/text_color_normal"
                app:left_text="联系电话"
                app:right_hint="请填写"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.runer.toumai.widget.NormalInputEditText>

            <com.runer.toumai.widget.NormalInputEditText
                android:id="@+id/feed_user_email"
                app:input_type="text"
                app:left_text_color="@color/text_color_normal"
                app:left_text="邮箱"
                app:right_hint="请填写"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></com.runer.toumai.widget.NormalInputEditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/common40dp"
                android:text="你想说的话"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_16sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/common_left_right_margin"
                android:background="@color/white"
                />

            <EditText
                android:id="@+id/feed_content"
                android:layout_marginTop="@dimen/common_top_bottom_margin"
                android:background="@drawable/edit_bg_shape"
                android:layout_marginLeft="@dimen/common_left_right_margin"
                android:gravity="left|top"
                android:padding="@dimen/common4dp"
                android:layout_marginRight="@dimen/common_left_right_margin"
                android:layout_width="match_parent"
                android:layout_height="@dimen/common90dp" />

            <TextView
                android:id="@+id/commit_bt"
                style="@style/normal_bt_style"
                android:text="提交"
                android:layout_marginTop="@dimen/common20dp"
                android:layout_marginBottom="@dimen/common20dp"
                ></TextView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>


</LinearLayout>
